<div class="main users-login">
  <div class="container">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label "メールアドレス or ユーザー名" %><br />
      <%= f.text_field :login, autofocus: true, class: "form-control col-md-5 col-sm"
         %>
    </div>

    <div class="field">
      <%= f.label "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me  %>
      <%= f.label "次回から自動でログインする"%>
    </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
