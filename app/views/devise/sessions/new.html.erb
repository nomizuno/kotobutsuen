<div class="main users-login">
  <div class="container">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label "email or username" %><br />
      <%= f.text_field :login, autofocus: true, class: "form-control col-md-5 col-sm",
          placeholder: "Enter email or username" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
