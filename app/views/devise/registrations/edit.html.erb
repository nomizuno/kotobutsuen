<div class="main users-login">
  <div class="container">
    <h2> ユーザー編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class= "user">
      <%= image_tag current_user.avatar.url, class: "border rounded w-25" %>
    </div>

     <div class= "form-group">

       <%= f.label "ユーザー画像" %><br />
       <%= f.file_field :avatar %>

    </div>
    <div class="field">
      <%= f.label "ユーザ名" %><br />
      <%= f.text_field :name, class: "form-control col-md-5 col-sm",
          autocomplete: "Username"%>
    </div>

    <div class="field">
      <%= f.label "プロフィール" %><br />
      <%= f.text_area :userprofile, autofocus: true, autocomplete: "userprofile" %>
    </div>

    <div class="field">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>「 <%= resource.unconfirmed_email %>」への変更の認証待ちです。</div>
    <% end %>

    <div class="field">
      <%= f.label "変更後パスワード" %> <i>(変更しない場合は空欄にしてください。)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上は必要</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label "変更後パスワード再入力" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label "現在のパスワード" %> </br>
      <i>(変更を反映するにはパスワードを入力してください。)</i><br/>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "確定" %>
    </div>
    <% end %>

    <!-- <h3>やはり辞める</h3> -->

  <!-- <p><%= button_to "アカウントを消去する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->

    <%= link_to "戻る", :back %>
  </div>
</div>
