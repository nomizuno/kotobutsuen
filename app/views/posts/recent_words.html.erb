<div class ="main posts-index">
	<div class="container">

		<!--ニュースここから-->
		<%= render 'shared/news' %>
		<!--ニュースここまで-->
		

		<ul class="user-tabs">
			<li ><%= link_to("人気","/posts/popular") %></li>
			<li ><%= link_to("索引","/posts/index_all") %></li>
			<li class="active"><%= link_to("新ことば","/posts/recent_words") %></li>
			<li><%= link_to("新意味","/posts/recent") %></li>
			<li><%= link_to("ランダム","/posts/random") %></li>
		</ul>

		<% @posts.each do |post| %>
		<div class="posts-index-item">

			<div class ="user-right" >
				<span><%= link_to(post.reading,"/posts/#{post.id}") %></span>
				【<%= link_to(post.content,"/posts/#{post.id}") %>】

			</div>

		</div>
		<% end %>
		<div class = "page">
		 <%= paginate @posts %>
		</div>
	</div>
</div>
